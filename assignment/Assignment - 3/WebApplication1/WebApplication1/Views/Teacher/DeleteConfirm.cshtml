@model WebApplication1.Models.Teacher
@{
    ViewBag.Title = "DeleteConfirm";
}


<div id="containershow" style="width: 80%; margin: 0 auto; margin-top: 80px;">

    <nav>
        <a class="navlink" style="float:left;" href="/Teacher/Show/@Model.TeacherId">Cancel</a>
    </nav>
    <h2>Are you sure you want to delete  @Model.TeacherFname @Model.TeacherLname? </h2>

    <p>This action cannot be undone</p>



    <form method="POST" action="/Teacher/Delete/@Model.TeacherId">
        <button class="delbutton" style=" display: block; margin: 0 auto; background: #dd1111; color: #fff; border: 2px solid #000; border-radius: 3px; } ">
            Confirm Delete
        </button>
    </form>

    <p>@Model.EmployeeNumber</p>
    <p>@Model.HireDate</p>
    <p>@Model.Salary</p>
</div>
